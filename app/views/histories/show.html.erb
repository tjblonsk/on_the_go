<% @histories.each do |history| %>
<h1><%= history.title %></h1>
<p><%= history.site %></p>
<p><%= history.url %></p>
<p><% qr = RQRCode::QRCode.new( history.url, :size => 17, :level => :h ) %></p>

<style type="text/css">
table {
	border-width: 0;
	border-style: none;
	border-color: #0000ff;
	border-collapse: collapse;
}
td {
	border-width: 0;
	border-style: none;
	border-color: #0000ff;
	border-collapse: collapse;
	padding: 0;
	margin: 0;
	width: 5px;
	height: 5px;
}
td.black { background-color: #000; }
td.white { background-color: #fff; }
</style>

<table>
	<% qr.modules.each_index do |x| %>
	<tr>
		<% qr.modules.each_index do |y| %>
		<% if qr.dark?(x,y) %>
		<td class="black"/>
		<% else %>
		<td class="white"/>
		<% end %>
		<% end %>
	</tr>
	<% end %>
</table>
<%end%>
